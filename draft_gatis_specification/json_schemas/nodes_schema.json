{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/dotbts/BPA/main/draft_gatis_specification/json_schemas/nodes_schema.json",
    "title": "Draft GATIS nodes.geojson JSON-Schema",
    "type": "object",
    "required": [
        "type",
        "features"
    ],
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "FeatureCollection"
            ]
        },
        "features": {
            "type": "array",
            "items": {
                "title": "GeoJSON Feature",
                "type": "object",
                "required": [
                    "type",
                    "properties",
                    "geometry"
                ],
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "Feature"
                        ]
                    },
                    "id": {
                        "oneOf": [
                            {
                                "type": "number"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    },
                    "properties": {
                        "type": "object",
                        "properties": {
                            "node_id": {
                                "type": "string"
                            },
                            "node_type": {
                                "type": "string",
                                "enum": [
                                    "(Same as Node Types)"
                                ]
                            },
                            "curb_ramp_system_id": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "presence": {
                                "type": "string",
                                "enum": [
                                    "yes",
                                    "no | missing",
                                    "unknown"
                                ]
                            },
                            "reference_ids": {
                                "oneOf": [
                                    {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {}
                                        }
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "date_built": {
                                "oneOf": [
                                    {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    {
                                        "type": "string",
                                        "pattern": "^[1-9]\\d{3}-(?:0[1-9]|1[0-2])$"
                                    },
                                    {
                                        "type": "string",
                                        "pattern": "^[1-9]\\d{3}$"
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "last_inspection_date": {
                                "oneOf": [
                                    {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    {
                                        "type": "string",
                                        "pattern": "^[1-9]\\d{3}-(?:0[1-9]|1[0-2])$"
                                    },
                                    {
                                        "type": "string",
                                        "pattern": "^[1-9]\\d{3}$"
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "curb_type": {
                                "type": "string",
                                "enum": [
                                    "raised",
                                    "rolled",
                                    "flush",
                                    "driveway",
                                    "other"
                                ]
                            },
                            "ada_compliance_date": {
                                "oneOf": [
                                    {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    {
                                        "type": "string",
                                        "pattern": "^[1-9]\\d{3}-(?:0[1-9]|1[0-2])$"
                                    },
                                    {
                                        "type": "string",
                                        "pattern": "^[1-9]\\d{3}$"
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "ada_compliant_with": {
                                "type": "string",
                                "enum": [
                                    "2010",
                                    "PROWAG",
                                    "other"
                                ]
                            },
                            "incline": {
                                "type": "number"
                            },
                            "cross_slope": {
                                "type": "number"
                            },
                            "width_in": {
                                "type": "number"
                            },
                            "ramp_type": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "detectable_warning": {
                                "type": "string",
                                "enum": [
                                    "tactile and contrasted",
                                    "tactile and not contrasted",
                                    "not tactile and contrasted",
                                    "no"
                                ]
                            },
                            "impediment": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "enum": [
                                        "yes",
                                        "no",
                                        "cracking",
                                        "scaling",
                                        "spalling",
                                        "uneven joints",
                                        "displacement",
                                        "frequent water pooling",
                                        "heaving",
                                        "missing bricks/stones",
                                        "potholes/holes",
                                        "slickness",
                                        "detectable warning surface damage",
                                        "longitudinal cracks and seams",
                                        "metal plates",
                                        "other"
                                    ]
                                }
                            },
                            "rail_crossing_control": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "enum": [
                                        "yes",
                                        "no",
                                        "cracking",
                                        "scaling",
                                        "spalling",
                                        "uneven joints",
                                        "displacement",
                                        "frequent water pooling",
                                        "heaving",
                                        "missing bricks/stones",
                                        "potholes/holes",
                                        "slickness",
                                        "detectable warning surface damage",
                                        "longitudinal cracks and seams",
                                        "metal plates",
                                        "other"
                                    ]
                                }
                            },
                            "surface_issue": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "enum": [
                                        "yes",
                                        "no",
                                        "cracking",
                                        "scaling",
                                        "spalling",
                                        "uneven joints",
                                        "displacement",
                                        "frequent water pooling",
                                        "heaving",
                                        "missing bricks/stones",
                                        "potholes/holes",
                                        "slickness",
                                        "detectable warning surface damage",
                                        "longitudinal cracks and seams",
                                        "metal plates",
                                        "other"
                                    ]
                                }
                            },
                            "status": {
                                "type": "string",
                                "enum": [
                                    "open",
                                    "closed",
                                    "under construction",
                                    "planned",
                                    "unknown"
                                ]
                            },
                            "other_issue": {
                                "type": "string",
                                "enum": [
                                    "yes",
                                    "no",
                                    "detectable warning not aligned with crossing",
                                    "push button not working",
                                    "markings worn",
                                    "markings missing",
                                    "turning space missing",
                                    "other"
                                ]
                            },
                            "last_inspection_type": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "lifecycle_stage": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "maintenance_schedule": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "planned_work": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "owner": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "maintainer": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            }
                        },
                        "additionalProperties": false
                    },
                    "geometry": {
                        "title": "GeoJSON Point",
                        "type": "object",
                        "required": [
                            "type",
                            "coordinates"
                        ],
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "Point"
                                ]
                            },
                            "coordinates": {
                                "type": "array",
                                "minItems": 2,
                                "items": {
                                    "type": "number"
                                }
                            },
                            "bbox": {
                                "type": "array",
                                "minItems": 4,
                                "items": {
                                    "type": "number"
                                }
                            }
                        }
                    },
                    "bbox": {
                        "type": "array",
                        "minItems": 4,
                        "items": {
                            "type": "number"
                        }
                    }
                }
            }
        },
        "bbox": {
            "type": "array",
            "minItems": 4,
            "items": {
                "type": "number"
            }
        }
    },
    "description": "Draft JSON-Schema for GATIS nodes",
    "additionalProperties": false
}